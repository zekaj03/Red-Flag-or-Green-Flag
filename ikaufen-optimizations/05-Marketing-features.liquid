<script>
// Exit Intent Detection
(function() {
  const popup = document.getElementById('exitPopup');
  const closeBtn = popup.querySelector('.popup-close');
  const overlay = popup.querySelector('.popup-overlay');
  const form = document.getElementById('exitPopupForm');

  let popupShown = false;

  // Check if user already saw popup (Cookie/LocalStorage)
  if (localStorage.getItem('exitPopupShown')) {
    return;
  }

  // Desktop: Mouse verl√§sst Viewport nach oben
  document.addEventListener('mouseout', (e) => {
    if (e.clientY < 0 && !popupShown && window.innerWidth > 768) {
      showPopup();
    }
  });

  // Mobile: Nach 30 Sekunden oder bei Scroll-Up
  let scrollPos = 0;
  let timeout = setTimeout(() => {
    if (!popupShown && window.innerWidth <= 768) {
      showPopup();
    }
  }, 30000);

  window.addEventListener('scroll', () => {
    if (window.innerWidth <= 768) {
      const currentScroll = window.pageYOffset;
      if (currentScroll < scrollPos && currentScroll > 500 && !popupShown) {
        showPopup();
      }
      scrollPos = currentScroll;
    }
  });

  function showPopup() {
    if (popupShown) return;
    popup.classList.add('show');
    popupShown = true;
    document.body.style.overflow = 'hidden';
  }

  function hidePopup() {
    popup.classList.remove('show');
    document.body.style.overflow = '';
    localStorage.setItem('exitPopupShown', 'true');
  }

  closeBtn.addEventListener('click', hidePopup);
  overlay.addEventListener('click', hidePopup);

  // Form Submit (Integration mit Klaviyo/Mailchimp)
  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const email = form.querySelector('input[type="email"]').value;

    // Hier Klaviyo/Mailchimp API Integration
    console.log('Email submitted:', email);

    // Success Message
    popup.querySelector('.popup-body').innerHTML = `
